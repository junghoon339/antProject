<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AuthorityMapper">
	<resultMap type="authorityDTO" id="authorityMap">
		<result column="user_no" property="userNo"/>
		<result column="authorities_authority" property="authority"/>
	</resultMap>

	<select id="selectAuthorityByUserName" parameterType="int" resultMap="authorityMap">
		SELECT authorities_no, user_no, authorities_authority
		FROM authorities
		WHERE user_no = #{userNo}
	</select>

</mapper>